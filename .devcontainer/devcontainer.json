{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "editor.formatOnSaveMode": "file",
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 3000,
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": [
                    "--line-length",
                    "88"
                ],
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ],
                "git.user.name": "Oleg Kizyma",
                "git.user.email": "oleg1203@gmail.com"
            },
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "KevinRose.vsc-python-indent",
                "wholroyd.jinja",
                "MS-CEINTL.vscode-language-pack-ru",
                "donjayamanne.python-extension-pack",
                "donjayamanne.python-environment-manager",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.vscode-docker",
                "batisteo.vscode-django",
                "openai.openai-chatgpt-adhoc",
                "ms-python.autopep8",
                "njpwerner.autodocstring",
                "Continue.continue",
                "GitHub.copilot-chat",
                "GitHub.copilot",
                "ms-python.black-formatter",
                "ms-python.isort",
                "sourcery.sourcery",
                "eamodio.gitlens"
            ]
        }
    },
    "portsAttributes": {
        "9000": {
            "label": "Hello Remote World",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "sudo apt update && sudo apt upgrade -y && python3 -m pip install --upgrade pip && pip3 install -r requirements.txt && cp /path/to/host/.ssh/id_rsa /root/.ssh/id_rsa && cp /path/to/host/.ssh/id_rsa.pub /root/.ssh/id_rsa.pub && chmod 600 /root/.ssh/id_rsa && chmod 644 /root/.ssh/id_rsa.pub && eval \"$(ssh-agent -s)\" && ssh-add /root/.ssh/id_rsa"
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}